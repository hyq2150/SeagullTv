<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/rl_gentrue_tip"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center"
	android:background="@color/dark_grey"
	android:visibility="gone"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
		android:id="@+id/ll_gentrue"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">
		<ImageView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:scaleType="fitCenter"
			android:src="@mipmap/ic_gestrue_left"/>
		<View
			android:layout_width="2dp"
			android:layout_height="100dp"
			android:background="@color/white"/>
		<ImageView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:scaleType="fitCenter"
			android:src="@mipmap/ic_gestrue_middle"/>
		<View
			android:layout_width="2dp"
			android:layout_height="100dp"
			android:background="@color/white"/>
		<ImageView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:scaleType="fitCenter"
			android:src="@mipmap/ic_gestrue_right"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@+id/ll_gentrue"
		android:gravity="center">
		<TextView
			android:id="@+id/ctv_title"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="左右滑动调节亮度"
			android:textColor="@color/white"
			android:textSize="12sp"/>
		<com.victor.view.ColorTextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="上下滑动换台"
			android:textColor="@color/white"
			android:textSize="12sp"/>
		<com.victor.view.ColorTextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:text="左右滑动调节声音"
			android:textColor="@color/white"
			android:textSize="12sp"/>
	</LinearLayout>
</RelativeLayout>
